<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <%= link_to "Chat Now", rooms_path, class:"text-white bg-pink-400 px-4 py-2 rounded-lg w-auto m-auto inline cursor-pointer hover:bg-pink-600" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl flex text-justify-center">Cars</h1>
    <%= link_to "New car", new_car_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>
  <%= render "form", car: Car.new %>
  <div id="cars" class="min-w-full">
    <%= render @cars %>

  </div>
</div>
